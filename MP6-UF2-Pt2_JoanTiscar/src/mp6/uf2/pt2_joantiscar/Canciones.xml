<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Canciones">

    <resultMap id="result" type="model.Canciones">
        <result property="_1_Nom" coluumn="_1_Nom" />
        <result property="_2_Genere" coluumn="_2_Genere" />
        <result property="_3_Data" coluumn="_3_Data" />
        
    </resultMap>
    
    <select id="getAll" resultMap="result">
        SELECT * FROM canciones
    </select>
    <select id="getByNom" resultMap="result">
        SELECT * FROM canciones WHERE _1_Nom like '%{nom}%'
    </select>
    <select id="getByGenere" resultMap="result">
        SELECT * FROM canciones WHERE _2_Genere like '%{genere}%'
    </select>
    <select id="getByData" resultMap="result">
        SELECT * FROM canciones WHERE _3_Data like '%{data}%'
    </select>
</mapper>